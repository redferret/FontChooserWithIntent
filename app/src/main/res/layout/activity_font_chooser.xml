<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_font_chooser"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="apackage.richard.com.fontchooser.FontChooserActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:text="Sample Text"
            android:layout_width="match_parent"
            android:layout_height="79dp"
            android:id="@+id/sampleText"
            android:textSize="25dp"
            android:textAlignment="center" />

        <TextView
            android:text="Font Styles"
            android:layout_width="match_parent"
            android:id="@+id/label1"
            android:textSize="19dp"
            android:textColor="@color/Black"
            android:layout_height="30dp" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:id="@+id/fontStyles"/>

        <TextView
            android:text="Font Family"
            android:textSize="19dp"
            android:textColor="@color/Black"
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:id="@+id/label2" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:id="@+id/fontFamily"/>

        <TextView
            android:text="Text Color"
            android:textSize="19dp"
            android:textColor="@color/Black"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:id="@+id/label3"/>

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:id="@+id/redSeek"
            android:progressDrawable="@drawable/redprogress_scrubber_progress_horizontal_holo_light"
            android:thumb="@drawable/redprogress_scrubber_control_normal_holo"
            android:max="255"
            android:progress="0" />

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:id="@+id/greenSeek"
            android:progressDrawable="@drawable/greenprogress_scrubber_progress_horizontal_holo_light"
            android:thumb="@drawable/greenprogress_scrubber_control_normal_holo"
            android:max="255"
            android:progress="0" />

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:id="@+id/blueSeek"
            android:progressDrawable="@drawable/blueprogress_scrubber_progress_horizontal_holo_light"
            android:thumb="@drawable/blueprogress_scrubber_control_normal_holo"
            android:max="255"
            android:progress="0" />

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:id="@+id/alphaSeek"
            android:progressDrawable="@drawable/alphaprogress_scrubber_progress_horizontal_holo_light"
            android:thumb="@drawable/alphaprogress_scrubber_control_normal_holo"
            android:max="255"
            android:progress="255" />

        <TextView
            android:text="Text Size"
            android:textSize="19dp"
            android:textColor="@color/Black"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:id="@+id/label4" />

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:id="@+id/textSizeSeek"
            android:progressDrawable="@drawable/alphaprogress_scrubber_progress_horizontal_holo_light"
            android:thumb="@drawable/alphaprogress_scrubber_control_disabled_holo"
            android:max="40"
            android:progress="10" />

        <Button
            android:text="Set"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/set_font"
            android:onClick="sendFontWithIntent"/>

    </LinearLayout>

</ScrollView>
